<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/linearlayout_row"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp">

    <android.support.v7.widget.CardView
        android:layout_marginTop="5dp"
        android:elevation="10dp"
        app:cardCornerRadius="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:background="#FFFFFF"
        android:layout_marginLeft="2dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:elevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <TextView
        android:textStyle="bold|italic"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif"
        android:text="Jaydeva Hospital"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:id="@+id/textview_name_row"
        android:textColor="#000"/>
        </android.support.v7.widget.CardView>


    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:text="Bommanahalli,Banglore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textview_address_row"
        android:textSize="18sp"
        android:textColor="#880E4F" />
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:text="Rating Row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textview_rate_row"
        android:textSize="18sp"
        android:textColor="#F8BBD0" />

    </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
